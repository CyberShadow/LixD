{
    "name": "lix",
    "description": "single-/multiplayer puzzle game, inspired by Lemmings",
    "homepage": "http://asdfasdf.ethz.ch/~simon/",
    "copyright": "public domain",
    "authors": ["Simon N."],

    "targetName": "lix",
    "targetPath": "bin",
    "workingDirectory": "./",

    "dependencies": {
        "allegro": "~>2.0",
        "enumap": ">=0.4.0",
        "derelict-enet": "~>2.0.0",
        "tharsis-prof": "~>0.5.3",
    },

    "libs": [
        "allegro_acodec",
        "allegro_audio",
        "allegro_font",
        "allegro_ttf",
        "allegro_image",
        "allegro_color",
        "allegro_primitives",
    ],
    "lflags": ["-lallegro"],
    "libs-windows": ["allegro"],
    "lflags-windows": ["-L/subsystem:windows"],

    "buildRequirements": ["disallowDeprecations"],
    "versions": ["ALLEGRO_NO_PRAGMA_LIB"],
    "buildTypes": {
        "debug": {
            "buildOptions": ["debugMode", "debugInfo"],
            "versions": ["tharsisprofiling"],
        },
        "profile": {
            "buildOptions": ["optimize", "inline", "releaseMode"],
            "versions": ["tharsisprofiling"],
        },
    },
}
